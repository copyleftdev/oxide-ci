# Oxide CI Environment Configuration
# Copy this to .env and customize for your environment

# PostgreSQL
POSTGRES_PASSWORD=oxide_dev_password

# MinIO (S3-compatible storage)
MINIO_PASSWORD=oxide_dev_password

# API Configuration
API_HOST=0.0.0.0
API_PORT=8080

# Database
DATABASE_URL=postgres://oxide:oxide_dev_password@localhost:5432/oxide

# NATS
NATS_URL=nats://localhost:4222

# Cache
CACHE_URL=http://localhost:9000
CACHE_ACCESS_KEY=oxide
CACHE_SECRET_KEY=oxide_dev_password

# Tracing
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# Logging
RUST_LOG=info,oxide=debug
